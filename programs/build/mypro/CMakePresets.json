{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "default",
      "description": "Default configuration",
      "generator": "Ninja",
      "vendor": {
          "jetbrains.com/clion": {
            "toolchain": "WSL"
          }
      },
      "binaryDir": "${sourceDir}/build/mypro",
      "hidden": false,
      "cacheVariables": {
        "MYPRO_BUILD_TESTS": "ON",
        "MYPRO_BUILD_EXAMPLES": "ON",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }

  ]
}
